{
  "name": "sodium",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test test/unit/pools.js test/unit/borrow.js test/unit/wallet.js test/unit/repayment.js test/unit/auction.js",
    "coverage": "npx hardhat coverage",
    "deploy": "npx hardhat deploy",
    "node": "npx hardhat node --no-deploy",
    "eslint": "npx eslint scripts/*.js test/*.js",
    "eslint:fix": "npx eslint --fix scripts/*.js test/*.js",
    "solhint": "solhint contracts/**/*.sol",
    "size-contracts": "npx hardhat size-contracts",
    "prettier:solidity": "./node_modules/.bin/prettier --write 'contracts/**/*.sol'"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.9.7",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.22",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  }
